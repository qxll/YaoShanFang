<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:qlx="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6f8">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f5f6f8">
        <TextView
            android:textSize="17dp"
            android:layout_centerInParent="true"
            android:text="修改登录密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0a0a09"/>

        <LinearLayout
            android:id="@+id/activity_alterpasswd_lay_back"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/icon_activity_jtleft_blue"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#ebecec"/>

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="85dp"
        android:layout_height="85dp">
        <ImageView

            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@mipmap/icon_changpwd_headland"/>

        <cn.food.medicinal.com.yaoshanfang.viewcollection.HeadImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            qlx:radius="35dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/icon_changpwd_head"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="16dp"
            android:background="@drawable/style_edit_grayborder"
            android:hint="请输入新密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_alter_passwd_eyes"
                android:layout_marginRight="12dp"/>
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="16dp"
            android:background="@drawable/style_edit_grayborder"
            android:hint="请确认新密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_alter_passwd_eyes"
                android:layout_marginRight="12dp"/>
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <EditText
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="16dp"
            android:background="@drawable/style_edit_grayborder"
            android:hint="请输入验证码"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="0.8"/>

        <Button
            android:id="@+id/activity_alterpasswd_btn_getyzcode"
            android:textColor="@color/colorEditBorderBlue"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/style_btn_grayblueborder"
            android:layout_weight="3.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="获取验证码"/>

    </LinearLayout>

    <EditText
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="256680"
        android:background="@drawable/style_edit_bluebroder"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="修改密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/style_btn_solidblue"
        android:textColor="#fff"

        />
</LinearLayout>